{
  "name": "PHP 8.4 + Nginx",
  "author": "Nevercold",
  "description": "A PHP 8.4 + Nginx webserver environment (Debian, Composer, Supervisor).",
  "docker_images": {
    "8.4": "ghcr.io/nevercold/php-egg:latest"
  },
  "startup": "/usr/bin/supervisord -n",
  "environment": {},
  "config": {
    "files": "{}",
    "startup": "{\r\n    \"done\": \"ready\"\r\n}",
    "logs": "{}",
    "stop": "pkill nginx && pkill php-fpm"
  },
  "scripts": {
    "installation": {
      "script": "#!/bin/bash\nmkdir -p /home/container/public\ncd /home/container && composer install || true",
      "container": "debian:bookworm",
      "entrypoint": "bash"
    }
  }
}
